@model IEnumerable<PetShop.Models.Product>
<!--Trash của Product trong Admin/View-->
@{
    ViewBag.Title = "Trasj";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-success">
                    <!-- Button quay trở về trang Index-->
                    <i class="fa-solid fa-arrow-left"></i> Quay về danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px" ; class="text-center">#</th>
                    <th>Tên sản phẩm</th>
                    <th style="width:180px" ; class="text-center">Chức năng</th>
                    <th style="width:20px" ; class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkId" type="checkbox" />
                        </td>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <!--Tạo button khôi phục    -->
                            <a href="@Url.Action("ReTrash", "Product", new { @id = item.Id })" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-trash-restore"></i>
                            </a>
                            <!--Tạo button xoá hẳn luôn-->
                            <a href="@Url.Action("Delete", "Product", new { @id = item.Id })" class="btn btn-sm btn-outline-danger">
                                <i class="fa-solid fa-trash-alt"></i>
                            </a>
                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

