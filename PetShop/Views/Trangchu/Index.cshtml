@model IEnumerable<PetShop.Models.Category>

<!--/View/Home/Index-->
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<style>
    #box-img-left:hover img {
        transform: scale(1.2, 1.2);
        z-index: 9;
    }

    #box-img-left img {
        width: 100%;
        height: 100%;
        margin-bottom: -5px;
        transition: all 0.3s ease-out;
        position: relative;
        z-index: 2;
    }

    #box-img-left {
        width: 50%;
        width: auto;
        max-width: 500px;
        height: auto;
        overflow: hidden;
        position: relative;
    }
</style>
@foreach (var c in Model)
{
    var items = c.Products
    .OrderBy(p => Guid.NewGuid())
    .ToList();
    <div >
        <div >
            <a href="/Product/Category/CategoryID=@c.Id" style="color:black"><h2>@c.Name</h2></a>
        </div>
        <div>
            <div class="container">
                <div class="row">
                    @foreach (var p in items)
                    {
                        <div class="col">
                            <div id="box-img-left" style="width:200px">
                                <a href="/chi-tiet/@p.Slug/@p.Id">
                                    <img class="img-responsive" src="~/Public/images/Product/@p.Img" />
                                </a>
                            </div>
                            <div>
                                <h3>
                                    <a href="/chi-tiet/@p.Slug/@p.Id" title="@p.Name" style="color:black">@p.Name</a>
                                </h3>
                                <div class="text-danger">
                                    <span class="">@p.Price $</span>
                                </div>
                                <div class="">
                                    <button type="button" class="btn fa-shopping-cart" data-id="@p.Id" style="background-color: #ffcea5">
                                    Thêm vào giỏ
                                    </button>
                                </div>
                            </div>
                        </div>

                    }
                    </div>
                </div>
            </div>

    </div>
    <div class="clearfix"></div>

}
